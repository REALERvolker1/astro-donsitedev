---
export interface Props {
    src: string
}
const { src } = Astro.props
---

<div class="image-container">
    <img
        src={src}
        class="image-container-child"
    />
</div>

<style>
    .image-container {
        width: 100%;
        aspect-ratio: 16 / 9;
    }
    .image-container-child {
        width: 100%;
        height: 100%;
    }
</style>
